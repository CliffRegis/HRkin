<div class="page-header">
  <center><strong><h1> HRKin Topics </h1></strong></center>
</div>

<%= form_tag topics_path(@topic, @posts), :method => :get do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "search", :title => nil %>
</p>
<% end %>

<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to topic.title, topic  %>
      </h4>
      <h5>
        <%= topic.content %>
      </h5>
     
      <%= link_to 'Edit', edit_topic_path(topic) %>
      <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
     <%= will_paginate @topics %>
  </div>
  <hr>
<% end %>
<br>
<br>
 <%= link_to 'New Topic', new_topic_path, class: 'btn btn-success' 'alert alert-success'  %>
