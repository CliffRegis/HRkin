
<%= render partial: 'post', locals: {post: @post, comment: @comment} %>
<%= render :partial => "/votes/vote", locals: {post: @post, vote: @vote } %>


  <div>
    <small>
      <%= pluralize(@post.up_votes, 'up vote') %>,
      <%= pluralize(@post.down_votes, 'down vote') %>
        <div class='js-comments-count'>
         </div>
    </small>
  </div>
  <br>
<div>
    <h3> Comments:</h3>
      <p class="italic"> <%= pluralize(@comments.count,'comment') %> </p>
    <div>
      <%= render partial: "comments/comment", locals: {topic: @topic, post: @post, comment: @comment} %> 
    </div>
</div>
<table>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td> &nbsp </td>
        <td> <%= link_to "Delete", [@topic, @post], :method => :delete, 
        :confirm => 'are you sure you want to delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <div>
    <div class= 'new-comment'>
      <%= render :partial => "comments/form", locals: {post: @post, comment: @comment} %>
    </div>
  </div>

  