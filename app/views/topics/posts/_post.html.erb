
  <div class="row">
    <div class="col-md-8">  
      <h2>Post:</h2>  
       <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= @post.title %>  
          </h4>
          <h5> by <%= User.find(@post.user_id).username %> </h5>
        </div>
      </div>  
      <% if post.kind == 'image' %>
        <%= image_tag post.content, style: "width: 100%" %> 
      <% else %>
      <%= @post.content %> 
        <% end %>
        <br>  
      <%= link_to 'Edit Post', edit_topic_post_path(@topic, @post), class: 'btn btn-success'  %>
      <%= link_to "Delete Post",[@topic, @post], :method => :delete, class: 'btn btn-danger', :confirm => 'are you sure you want to delete' %> 
    </div>
  </div>
  <hr>


  