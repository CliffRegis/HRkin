<br>
<%= form_for [@topic, @post] do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There was an error </h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(@post.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  <% end %>
  <%= form_group_tag(@post.errors[:content]) do %>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 8, class: 'form-control', placeholder: "Enter post content" %>
  <% end %>
  <% if @post.image? %>
    <div class="form-group">
      <p>Current image</p>
      <%= image_tag(@post.image.picture.url) %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>