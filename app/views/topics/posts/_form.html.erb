<br>
<%= form_for [@topic, @post] do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There was an error </h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(@post.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  <% end %>
  <%= form_group_tag(@post.errors[:content]) do %>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 8, class: 'form-control', placeholder: "Enter post content" %>
  <% end %>
   <div class="form-group">
    <%= f.label "Text or Image" %><br>
    <%= f.select :kind, ["text", "image"], {},class:  'form-control' %>
  </div>
    
    <br>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>