<p id="notice"> <%= notice %></p>

<h1> <%= @topic.title %></h1>

<%= link_to 'Edit Topic', edit_topic_path(@topics) %> |
<%= link_to 'Back', topics_path %>

<h2> Posts </h2>
   <%#= form_tag topic_path(@topic, @posts), :method => :get do %>
  <p>
    <%#= text_field_tag :search, params[:search] %>
    <%#= submit_tag "search", :title => nil %>
  </p>
  <% #end %> 
<table class="table" style="width:100%" >
  <tr>
    <th> <%= link_to "Title"%></th>
    <th> <%= link_to "Point"%></th> 
    <th> <%= link_to "Created_at"%></th> 
  </tr>
   <% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title,[@topic, post] %></td>
    <td><%=pluralize(post.points, 'point') %></td> 
    <td><%= image_tag(post.user.avatar.small.url) if post.user.avatar? %> Created <%= time_ago_in_words(post.created_at) %> ago </td>
  </tr>
  <% end %>
</table>
<br>

<%= link_to 'New Post', new_topic_post_path(@topic, @post), class: 'btn btn-success' 'alert alert-success' %> 
    

     
