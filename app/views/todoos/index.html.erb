<div class="page-header">
  <center><strong><h1> HRtodo items </h1></strong></center>
</div>

<h2> Todo: </h2>
 
<% @todos.each do |t| %>
  <p>
    <strong> <%= t.name %> </strong>
    <small><%= t.countdown %> days</small>
    <small> <%= link_to 'Mark as Done', todoo_path(t), 
    :method => :put %> </small>
  </p>
   <hr>
<% end %>

<h2> Todone: </h2>

<% @todone.each do |t| %>
  <p>
    <strong> <%= t.name %> </strong>
    <small> <%= link_to 'Remove', t, :confirm => "Are you sure you want to delete?", :method => :delete %> </small>
  </p>
  <hr>
<%end%>

<p><%= link_to 'Add an item to the list', new_todoo_path %> </p>
