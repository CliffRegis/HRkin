
<h1>HRkin Posts</h1>

<% @posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title  %>
      </h4>
      <h5>
        <%= post.content %>
      </h5>
      <small>
        submitted <%= time_ago_in_words(post.created_at) %> ago 
      </small>
      <%= link_to 'Back', posts_path(@topic,@post) %>
    </div>
  </div>
<% end %>
<br>
 <%= link_to 'New Post', new_post_path(@topic,@post) %>